year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)

bibentry(bibtype = "Manual",
         title = "{meta}: General Package for Meta-Analysis",
         author = person("Guido", "Schwarzer"),
         year = year,
         note = note,
         url = "https://CRAN.R-project.org/package=meta")
